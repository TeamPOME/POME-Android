<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_friendprofile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_friend_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_friendname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/PomeM12"
        android:maxEms="3"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/pome_grey_5"
        app:layout_constraintEnd_toEndOf="@id/iv_friendprofile"
        app:layout_constraintStart_toStartOf="@id/iv_friendprofile"
        app:layout_constraintTop_toBottomOf="@id/iv_friendprofile"
        tools:text="양졍" />

</androidx.constraintlayout.widget.ConstraintLayout>