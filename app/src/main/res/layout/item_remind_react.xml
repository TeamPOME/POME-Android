<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="25dp"
    android:paddingVertical="20dp">

    <ImageView
        android:id="@+id/iv_remind_reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_emoji_mint_sad_filter_54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_remind_reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PomeM12"
        android:textColor="@color/pome_grey_6"
        app:layout_constraintEnd_toEndOf="@id/iv_remind_reaction"
        app:layout_constraintStart_toStartOf="@id/iv_remind_reaction"
        app:layout_constraintTop_toBottomOf="@id/iv_remind_reaction"
        tools:text="양지영" />
</androidx.constraintlayout.widget.ConstraintLayout>