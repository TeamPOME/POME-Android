<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_friendprofile_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_friend_profile_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_whole"
        style="@style/PomeSb12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/whole_friends"
        android:textColor="@color/pome_grey_8"
        app:layout_constraintEnd_toEndOf="@id/iv_friendprofile_whole"
        app:layout_constraintStart_toStartOf="@id/iv_friendprofile_whole"
        app:layout_constraintTop_toBottomOf="@id/iv_friendprofile_whole" />

</androidx.constraintlayout.widget.ConstraintLayout>