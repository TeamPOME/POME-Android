<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    tools:context=".presentation.record.emotion.AfterCompleteEmotionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_emotion_ment"
            style="@style/PomeSb20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/emotion_record"
            android:textColor="@color/pome_grey_9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pome_ment"
            style="@style/PomeM14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/emotion_recordment"
            android:textColor="@color/pome_grey_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_emotion_ment" />

        <ImageView
            android:id="@+id/iv_ex3d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ex3d"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:background="@drawable/rectangle_grey_round_8"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_top">

        <ImageView
            android:id="@+id/iv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_emoji_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_money"
            style="@style/PomeSb14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="32,800원을 사용했어요"
            android:textColor="@color/pome_grey_9"
            app:layout_constraintStart_toEndOf="@id/iv_money"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_money_content"
            style="@style/PomeM12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="이곳에는 사용자가 작성한 글이 있어요"
            android:textColor="@color/pome_grey_6"
            app:layout_constraintStart_toStartOf="@id/tv_money"
            app:layout_constraintTop_toBottomOf="@id/tv_money" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/rectangle_grey_round_8"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_one">

        <ImageView
            android:id="@+id/iv_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_emoji_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_emoji_first"
            style="@style/PomeSb14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="씀씀이 당시 행복했어요"
            android:textColor="@color/pome_grey_9"
            app:layout_constraintStart_toEndOf="@id/iv_first"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_first_sub"
            style="@style/PomeM12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="나를 위한 만족스러운 씀씀이를 하셨군요!"
            android:textColor="@color/pome_grey_6"
            app:layout_constraintStart_toStartOf="@id/tv_emoji_first"
            app:layout_constraintTop_toBottomOf="@id/tv_emoji_first" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_three"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/rectangle_grey_round_8"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_two">

        <ImageView
            android:id="@+id/iv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_emoji_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_emoji_second"
            style="@style/PomeSb14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="일주일 뒤 후회했어요"
            android:textColor="@color/pome_grey_9"
            app:layout_constraintStart_toEndOf="@id/iv_second"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_second_sub"
            style="@style/PomeM12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="괜찮아요. 다음 씀씀이는 만족스러울거에요!"
            android:textColor="@color/pome_grey_6"
            app:layout_constraintStart_toStartOf="@id/tv_emoji_second"
            app:layout_constraintTop_toBottomOf="@id/tv_emoji_second" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_complete"
        style="@style/PomeB18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rectangle_green_round_6"
        android:paddingVertical="15dp"
        android:text="@string/emotion_complete"
        android:textColor="@color/pome_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

